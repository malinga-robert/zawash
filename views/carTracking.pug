extends layout1 
block content 
    link(rel="stylesheet", href="/reg.css", type="text/css")
    .container
      center
        if alert =='success'
            div.alert.alert-success Vehicle information added successfully
        if alert =='error'
            div.alert.alert-danger An error occured, failed to add information
        form.reg(action='cartracking' method='POST' name='carreg' onsubmit='return Validate();')
          h1 Car Wash Tracking
          .row
            .col-md-6
              label Number Plate 
              input.form-control(type='text' name='numberplate' placeholder='Enter NumberPlate')
              #numberplateErr.error
            .col-md-6
              label Time
              input.form-control(type='text' name='toa' placeholder='Time Of Arrival' onclick="this.type='time'")
              #timeErr.error
          .row
            .col-md-6
              label Car Make
              input.form-control(type='text' name='make' placeholder='Enter Car Make')
              #makeErr.error
            .col-md-6
              label Car Color
              input.form-control(type='text' name='color' placeholder='Enter Car Color')
              #colorErr.error
          .row
            .col-md-6
              label(for='dateofArrival') Date of Arrival
              input#doa.form-control(type='text' name='doa' placeholder='Enter Date Of Arrival' onclick="this.type='date'")
              #dateErr.error
            .col-md-6
              label(for='CarType') Car Type
              input.form-control(type='text' name='type' placeholder='Enter Car Type')
              #typeErr.error
          .row
            .col-md-6
              label Washers
              select#washers.form-control(name='washer')
                option(value='' selected='' disabled='') --------Washers-------
                each washer in washers 
                  option(value=washer._id) #{washer.fullname}
                option(value='Kato Mark') Kato Mark
                option(value='Medi Ali') Medi Ali
                option(value='Opio Paul') Opio Paul
              #asignErr.error        
            .col-md-6
              label Packages 
              select#Package.form-control(name='package')
                option(value='' selected='' disabled='') -------Select A Package----------
                option(value='smallcars') Small Car(10000/=)
                option(value='medium') Medium Car(15000/=)
                option(value='fullwash') Full Wash(20000/=)
                option(value='bodaboda') Boda-Boda(5000/=)
                option(value='engine') Engine(10000/=)
              #packageErr.error
          br
          .row
            .col-md-12
              button.btn.btn-primary.btn-block(type='submit') Register
    br
    br
    // footer Copyright message
    footer.bg-light.text-center.text-lg-start
      .text-center.p-3(style='background-color: black;')
        | Copyright &copy; 2021 Zawash Car Bay.All rights reserved,Developed by Malinga Robert
