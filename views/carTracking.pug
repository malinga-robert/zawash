        //-     option(value='0') Kato Mark
        //-     option(value='1') Medi Ali
        //-     option(value='2') Opio Paul
      .row.d-flex.justify-content-center
        .form-group.mr-2
          label(for='inputPackage')
            strong Packages
          #packageErr.error
          select#Packages.form-control(name='package')
            option(value='' selected='' disabled='') -----------Select A Package----------
            option(value='smallcars') (Asign 1 washer)Small Car(10000/=)
            option(value='medium') (Asign 2 washers)Medium Car(15000/=)
            option(value='fullwash') (Asign 3 washers)Full Wash(20000/=)
            option(value='bodaboda') Boda-Boda(5000/=)
            option(value='engine') Engine(10000/=)
        .form-group.mr-2
          label(for='inputColor')
            strong Amount Due
          #paymentErr.error
          select#payment.form-control(name='payment')
            option(value='' selected='' disabled='') ---Select the amount due---
            option(value='SmallCar') Small Car wash(3000/=)
            option(value='MediumCar') Medium Car Wash(4000/=)
            option(value='Boda-Boda') Boda-Boda(1500/=)
      br
      button.form-control.btn.btn-primary(type="submit")
