  form.carreg(action='cartracking' method='POST' name='carreg' onsubmit='return Validate();')
    h1 Car Registration
    .container
      .row.d-flex.justify-content-center
        .col-mg
          .form-group.mr-2
            label.sr-only(for='inputNumberplate') Numberplate
            #numberplateErr.error
            input#inputNumberplate.form-control(type='text' name='numberplate' placeholder='Enter NumberPlate')
          br
          .form-group.mr-2
            label.sr-only(for='inputColor') Color
            #colorErr.error
            input#inputColor.form-control(type='text' name='color' placeholder='Enter Car Color')
        .col-mg
          .form-group.mr-2
            label.sr-only(for='inputTime') timeOfArrival
            #timeErr.error
            input#inputTime.form-control(type='text' name='toa' placeholder='Time of Arrival' onclick="(this.type='Time')")
          br
          .form-group.mr-2
            label.sr-only(for='inputDate') Date
            #dateErr.error
            input#inputColor.form-control(type='text' name='doa' placeholder='Enter Date' onclick="(this.type='Date')")
        .col-mg
          .form-group.mr-2
            label.sr-only(for='inputMake') Make
            #makeErr.error
            input#inputMake.form-control(type='text' name='make' placeholder='Enter Car Make')
          br
          .form-group.mr-2
            label.sr-only(for='inputType') Type
            #typeErr.error
            input#inputType.form-control(type='text' name='type' placeholder='Enter Car Type')
      p
        strong Asign Washers
      .row.d-flex.justify-content-center
        #asign.form-group.mr-2
          label(for='inputColor')
          #asignErr.error
          select#washers.form-control(name='washer')
            option(value='' selected='' disabled='') --Washers--
            each washer in washers 
              option(value=washer._id) #{washer.fullname}
            option(value='Kato Mark') Kato Mark
            option(value='Medi Ali') Medi Ali
            option(value='Opio Paul') Opio Paul
        //- .form-group.mr-2
        //-   label.sr-only(for='inputColor') Asign Washers:
        //-   select#Washers.form-control(name='Washers')
        //-     option(value='' selected='' disabled='') --Washers--
        //-     option(value='Kato Mark') Kato Mark
